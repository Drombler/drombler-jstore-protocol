{
  "$id": "http://www.drombler.org/drombler-jstore/Application.json",
  "type": "object",
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "applicationId": {
      "$id": "/properties/applicationId",
      "$ref": "Definitions.json#/definitions/applicationId"
    },
    "version": {
      "$id": "/properties/version",
      "type": "string",
      "title": "The version",
      "description": "The version of the application artifact.",
      "default": "",
      "examples": [
        "1.0.0"
      ]
    },
    "managedNativeComponents": {
      "$id": "/properties/managedComponents",
      "type": "object",
      "properties": {
        "jreInfo": {
          "$id": "/properties/managedComponents/properties/jreInfo",
          "type": "object",
          "properties": {
            "jreVendorId": {
              "$id": "/properties/managedComponents/properties/jreInfo/properties/jreVendorId",
              "type": "string",
              "title": "The JRE vendor id",
              "default": "",
              "examples": [
                "oracle"
              ]
            },
            "javaSpecificationVersion": {
              "$id": "/properties/managedComponents/properties/jreInfo/properties/javaSpecificationVersion",
              "type": "string",
              "title": "The Java major version",
              "default": "",
              "examples": [
                "8",
                "9",
                "10"
              ]
            },
            "customJREId": {
              "$id": "/properties/managedComponents/properties/jreInfo/properties/customJREId",
              "type": "string",
              "title": "The custom JRE id",
              "description": "The vendor specific JRE id for custom JREs.",
              "default": "",
              "examples": [
                "drombler-base"
              ]
            },
            "modules": {
              "$id": "/properties/managedComponents/properties/jreInfo/properties/modules",
              "type": "array",
              "title": "The Java modules",
              "description": "The required Java modules, which should be respected by alternate JREs.",
              "default": "",
              "examples": [
                "java.base"
              ],
              "items": {
                "$id": "/properties/managedComponents/properties/jreInfo/properties/modules/items",
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}